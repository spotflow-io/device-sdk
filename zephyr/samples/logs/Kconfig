config NET_WIFI_SSID
	string "SSID device should connect to"
	help
		SSID of the Wi-Fi network that the device should connect to.

config NET_WIFI_PASSWORD
	string "Wi-Fi Password device should connect to"
	help
		Wi-Fi password for the network that the device should connect to.

config SPOTFLOW_IS_WIFI_AVAILABLE
	bool
	help
		Indicates if Wi-Fi is available on the board (inferred from devicetree of supported boards).
	default y if \
		DT_HAS_ESPRESSIF_ESP32_WIFI_ENABLED || \
		DT_HAS_INFINEON_AIROC_WIFI_ENABLED || \
		DT_HAS_NORDIC_WLAN_ENABLED || \
		DT_HAS_NXP_WIFI_ENABLED || \
		DT_HAS_SILABS_SIWX91X_WIFI_ENABLED

choice SPOTFLOW_NETWORK_IFACE
	prompt "Spotflow network interface"
	default SPOTFLOW_USE_WIFI if SPOTFLOW_IS_WIFI_AVAILABLE
	default SPOTFLOW_USE_ETH

config SPOTFLOW_USE_WIFI
	bool "Enable Wi-Fi for Spotflow samples"
	imply WIFI
	imply WIFI_NM
	imply NET_L2_WIFI_MGMT
	# NXP specific configs
	imply WIFI_NXP if BOARD_FRDM_RW612
	# Enables IP fragmentation, which fixes the TLS handshake issue since Zephyr 4.2
	imply NXP_WIFI_TX_RX_ZERO_COPY if NXP_RW610

config SPOTFLOW_USE_ETH
	bool "Enable Ethernet for Spotflow samples"
	imply ETH_DRIVER
	imply NET_L2_ETHERNET_MGMT

endchoice

# If selected, fulfills SPOTFLOW_SETTINGS dependencies by storing Zephyr settings on flash
config SPOTFLOW_SAMPLE_CONFIG_PERSISTENCE_FLASH
	bool "Enable configuration persistence on flash"
	default y
	select CONFIG_FLASH
	select CONFIG_FLASH_MAP
	select CONFIG_NVS
	select CONFIG_SETTINGS
	select CONFIG_SETTINGS_NVS

config NET_IF_MAX_IPV4_COUNT
	int
	# By default eth driver on FRDM_RW612 is enabled;
	# therefore, we have to allow multiple IPv4 interfaces
	# so DHCP can work properly
	default 2 if SPOTFLOW_USE_WIFI && BOARD_FRDM_RW612

source "Kconfig.zephyr"
