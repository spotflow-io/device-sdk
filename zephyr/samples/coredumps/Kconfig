config NET_WIFI_SSID
	string "SSID device should connect to"
	help
		SSID of the wifi network that the device should connect to.

config NET_WIFI_PASSWORD
	string "Wifi Password device should connect to"
	help
		Wifi password for the network that the device should connect to.

config WIFI
	bool
	default y
	imply WIFI_NM
	imply NET_L2_WIFI_MGMT


config ETH_DRIVER
	bool
	default y if !WIFI
	default n if WIFI
config NET_L2_ETHERNET_MGMT
	bool
	default y if !WIFI
	default n if WIFI

# NXP specific configurations
config WIFI_NXP
	bool
	default y if WIFI
	default n if !WIFI

# Enables IP fragmentation, which fixes the TLS handshake issue in Zephyr 4.2
config NXP_WIFI_TX_RX_ZERO_COPY
	bool
	default y if WIFI_NXP
	default n if !WIFI_NXP

# end of NXP specific configurations
source "Kconfig.zephyr"
